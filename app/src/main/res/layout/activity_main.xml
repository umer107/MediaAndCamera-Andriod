<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umer.andriod.mediaandcamera.MainActivity">

    <Button
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Record"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp" />
    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_record"
        android:layout_alignBottom="@+id/btn_record"
        android:layout_toEndOf="@+id/btn_record"
        android:text="@string/Stop"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btn_stop"
        android:layout_alignBottom="@+id/btn_record"
        android:layout_alignBaseline="@+id/btn_record"
        android:text="@string/play"
        android:id="@+id/btn_play" />

    <Button
        android:id="@+id/btn_stopplayingrecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/StopPlayingRecording"
        android:layout_below="@+id/btn_record"
        android:layout_marginStart="59dp"
        android:layout_alignEnd="@+id/btn_play" />


</RelativeLayout>
